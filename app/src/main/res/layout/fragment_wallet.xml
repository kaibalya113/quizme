<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".WalletFragment"
>
    <View
            android:layout_width="0dp"
            android:layout_height="100dp" android:id="@+id/view5" android:background="@drawable/round_header"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="0dp"
            android:layout_height="200dp" android:id="@+id/view4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/rounded_box"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginRight="24dp" android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Your Coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/view4" app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4" android:layout_marginTop="30dp" android:textColor="#FFFFFF"
            android:textStyle="bold" android:textSize="29sp" android:gravity="center"/>
    <TextView
            android:text="5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/coin"
            app:layout_constraintEnd_toEndOf="@+id/textView18" app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginTop="16dp"
            android:textSize="30sp" android:textColor="#FFFBFB" android:textStyle="bold"/>
    <TextView
            android:text="You need more 10000 coins to withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView20"
            app:layout_constraintEnd_toEndOf="@+id/coin" app:layout_constraintStart_toStartOf="@+id/coin"
            android:textColor="#FFFFFF" app:layout_constraintTop_toBottomOf="@+id/coin"
            android:layout_marginTop="20dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/upibox"
            app:layout_constraintStart_toStartOf="@+id/view4" app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintTop_toBottomOf="@+id/view4" android:layout_marginTop="20dp"
            android:background="@drawable/option_view" android:hint="Enter Your UPI Id" android:padding="10dp"/>
    <Button
            android:text="Pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/upibtn"
            app:layout_constraintEnd_toEndOf="@+id/upibox" app:layout_constraintStart_toStartOf="@+id/upibox"
            app:layout_constraintTop_toBottomOf="@+id/upibox" android:layout_marginTop="20dp"
            android:background="@drawable/_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>