<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".LeaderBoardFragment">
    <View
            android:layout_width="wrap_content"
            android:layout_height="120dp" android:id="@+id/view10" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/round_header"/>
    <View
            android:layout_width="0dp"
            android:layout_height="150dp" android:id="@+id/view11" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="50dp" android:background="@drawable/rounded_box"/>
    <TextView
            android:text="Leader Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView23"
            app:layout_constraintEnd_toEndOf="@+id/view11" app:layout_constraintStart_toStartOf="@+id/view11"
            app:layout_constraintTop_toTopOf="@+id/view11" app:layout_constraintBottom_toBottomOf="@+id/view11"
            android:textSize="30sp" android:textStyle="bold" android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_podium" android:drawablePadding="14dp" android:gravity="center"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="373dp"
            android:layout_height="498dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/view11"
            android:layout_marginTop="30dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="3dp"
            tools:listitem="@layout/leader_board"
    />
</androidx.constraintlayout.widget.ConstraintLayout>