<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <ImageView
            android:layout_width="169dp"
            android:layout_height="164dp" app:srcCompat="@drawable/ic_trophy" android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
    />
    <TextView
            android:text="Congratulations"
            android:layout_width="203dp"
            android:layout_height="35dp" android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView4" app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginTop="40dp"
            android:textSize="28sp" android:textStyle="bold" android:gravity="center"/>
    <TextView
            android:text="Your Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14"
            app:layout_constraintEnd_toEndOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="16dp"
            android:textSize="28sp"/>
    <TextView
            android:text="9/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15"
            app:layout_constraintEnd_toEndOf="@+id/textView14" app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="20dp"
            android:textSize="28sp" android:textStyle="bold" android:textColor="#000000"/>
    <TextView
            android:text="Coin Earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintEnd_toEndOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/textView15" android:layout_marginTop="30dp"
            android:textSize="28sp"/>
    <TextView
            android:text="500"
            android:layout_width="173dp"
            android:layout_height="80dp" android:id="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/textView16" app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/textView16" android:textSize="28sp"
            android:layout_marginTop="16dp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.233" android:drawableLeft="@drawable/ic_dollar"
            android:gravity="center" android:textColor="#000000"/>
    <Button
            android:text="Share"
            android:layout_width="163dp"
            android:layout_height="50dp" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginTop="20dp" android:background="@drawable/_button" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#F1EEEE"/>
    <Button
            android:text="Restart"
            android:layout_width="159dp"
            android:layout_height="53dp" android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="20dp" android:background="@drawable/_button" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#F1EEEE"/>
</androidx.constraintlayout.widget.ConstraintLayout>